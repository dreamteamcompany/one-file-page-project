{
  "tests": [
    {
      "name": "Login Success",
      "method": "POST",
      "path": "/?endpoint=login",
      "body": {"username": "admin", "password": "admin"},
      "expectedStatus": 200
    },
    {
      "name": "Login Invalid Credentials",
      "method": "POST",
      "path": "/?endpoint=login",
      "body": {"username": "admin", "password": "wrong"},
      "expectedStatus": 401
    },
    {
      "name": "Me Unauthorized",
      "method": "GET",
      "path": "/?endpoint=me",
      "expectedStatus": 401
    },
    {
      "name": "CORS Preflight",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    }
  ]
}
